
<div id="profile-show">
  <div id="profile-avatar">
    <%= image_tag @user.avatar.url(:medium), :id => "avatar" %>
  </div>

  <div id="profile-panel">
    <p id="name">  <%= @user.name %> </p>

    <div id="interests", class="colapse">
      <strong class="panel-title"> Interestst: </strong>
      <p>
        <%= render @user.interests %>
      </p>
    </div>  
     <div class="more-button" >
      <a href="#", id="expand-button-interests", class="no-style-link">More</a>  
     </div> <br>

    <div id="responsibilities", class="colapse">
      <strong class="panel-title"> Responsabilidades: </strong>
      <p> <%= @user.responsibilities %> </p>
    </div>
    <div class="more-button">  
      <a href="#", id="expand-button-responsibilities", class="no-style-link"> More</a> 
    </div> <br>

    <strong class="panel-title"> Email: </strong>
    <p class="brillant-blue"> <%= @user.email %> </p>

    <strong class="panel-title"> Lugar de nacimiento: </strong>
    <p class="brillant-blue"> <%= @user.birthplace %> </p>

    <strong class="panel-title"> Education: </strong>
    <h5>Institution:</h5>
    <p> <%= @user.institution %> </p>
    <h5> Career: </h5>
    <p> <%= @user.career %> </p>

    <strong class="panel-title"> Position: </strong>
    <p> <%= @user.position %> </p>

    <strong class="panel-title"> Fecha de nacimiento: </strong>
    <p> <%= @user.birthdate %> </p>

  </div><br>

  <div id="back-button">
    <%= link_to "Back", welcomes_path, method: "get", id: "button-back" %> 
  </div>

</div>
