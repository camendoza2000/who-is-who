<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </p>

  <p>
    <%= f.label :email %> <br>
    <%= f.text_field :email %>
  </p>

   <p>
      <%= f.label :birthplace %> <br>
      <%= f.text_field :birthplace %>
    </p>

    <p>
      <%= f.label :birthdate %> <br>
      <%= f.date_select :birthdate, :include_blank => true, 
                                    :default => nil,
                                    :start_year => Date.current.year,
                                    :end_year => 1900, 
                                    :order => [:day, :month, :year]%>
    </p>

    <p> 
      <%= f.label :institution %> <br>
      <%= f.text_field :institution %> <br>
      <%= f.label :career %> <br>
      <%= f.text_field :career %>
    </p> 

    <p>
      <%= f.label :position %> <br>
      <%= f.text_field :position %>
    </p>

    <p>
      <%= f.fields_for :interests do |interest_form| %>
        
        <div class="collapse" id="interests_chooser">
          <table>
            <% m = 0 %>
            <% for i in 1..interests_row_count %>
            <tr>
              <% @interests.drop(m).each_with_index do |interest, m| break if m == 2 %>
                <td>
                   <%= check_box_tag interest.id, 'yes', false, class: "interests-checkbox-chooser"  %> <%= interest.name %>                  
                </td>
              <% end %>
              <% m += 2 %> 
            </tr>
            <% end %>   
          </table>
        </div>

        </div>  
          <div class="more-button" id="button-to-right" >
           <a href="#", id="expand-button-interests_chooser", class="no-style-link">More</a>  
        </div> <br>

        <%= render "interest_fields", :f => interest_form %>
      <% end %>
    </p>
   
   <p>
    <%= f.label :responsibilities %> <br>
    <%= f.text_area :responsibilities %>
  </p>

  <p>
    <%= f.file_field :avatar %> <br>
    <br>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>